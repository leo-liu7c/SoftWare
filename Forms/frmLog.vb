    Public Sub Clear()
        tbLog.Text = ""
    End Sub



    Public Sub Write(ByVal logString As String)
        tbLog.Text = tbLog.Text & logString
        tbLog.Refresh()
    End Sub



    Public Sub WriteLine(ByVal logString As String)
        Me.Write(logString & vbCrLf)
    End Sub



